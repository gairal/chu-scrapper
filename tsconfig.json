{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2019"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist", "./jest.config.js", "__mocks__/"]
}
